{
  "name": "@drop/desktop",
  "version": "0.0.1",
  "description": "DROP - Quick note-taking app",
  "author": "DROP Team",
  "main": "./out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev --mode localdev",
    "dev:local": "electron-vite dev --mode localdev",
    "dev:remote": "electron-vite dev --mode remote",
    "build": "electron-vite build",
    "build:local": "electron-vite build --mode localdev",
    "build:remote": "electron-vite build --mode remote",
    "preview": "electron-vite preview",
    "typecheck": "tsc --noEmit",
    "dist": "electron-vite build && electron-builder --mac",
    "dist:local": "electron-vite build --mode localdev && electron-builder --mac",
    "dist:remote": "electron-vite build --mode remote && electron-builder --mac"
  },
  "build": {
    "appId": "com.intellieffect.drop.desktop",
    "productName": "DROP",
    "directories": {
      "output": "release"
    },
    "files": [
      "out/**/*",
      "!node_modules/**/*"
    ],
    "npmRebuild": false,
    "buildDependenciesFromSource": false,
    "nodeGypRebuild": false,
    "publish": {
      "provider": "github",
      "owner": "intelli-bruce",
      "repo": "drop"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "notarize": true,
      "icon": "build/icon.png"
    },
    "dmg": {
      "title": "DROP",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "devDependencies": {
    "@drop/shared": "workspace:*",
    "@electron/rebuild": "^4.0.2",
    "@lexical/code": "^0.39.0",
    "@lexical/link": "^0.39.0",
    "@lexical/list": "^0.39.0",
    "@lexical/markdown": "^0.39.0",
    "@lexical/react": "^0.39.0",
    "@lexical/rich-text": "^0.39.0",
    "@supabase/supabase-js": "^2.89.0",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "dotenv": "^16.6.1",
    "electron": "33.4.11",
    "electron-builder": "^26.0.12",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "electron-vite": "^2.3.0",
    "lexical": "^0.39.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-file-icon": "^1.6.0",
    "typescript": "^5.7.2",
    "zustand": "^5.0.2"
  }
}
